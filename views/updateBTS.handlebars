<div class="container">
    <div class="jumbotron">
        <form class="buy-trade-sell" action="/updateBTS/update" method="post">
            <fieldset>
                {{#each btsUpdate}}
                <legend><b>Update BTS - User: {{fname}} {{lname}}, Book: {{title}}</b></legend>
                {{/each}}
                User:
                <select class="" name="userID">
                    <!--<option value="" disabled selected>Pick A User!</option>-->
                    {{#each btsUpdate}}
                    <option value="{{user_id}}" disabled selected>{{fname}} {{lname}}</option>
                    {{/each}}
                    {{#each users}}
                    <option value="{{user_id}}">{{fname}} {{lname}}</option>
                    {{/each}}
                </select>
                <br>
                <br>
                Book:
                <select class="book" name="book">
                    <!--<option value="" disabled selected>Pick A Book!</option>-->
                    {{#each btsUpdate}}
                    <option value="{{book_id}}" disabled selected>{{title}}</option>
                    {{/each}}
                    {{#each books}}
                    <option value="{{book_id}}">{{title}}</option>
                    {{/each}}
                </select>
                <br>
                <br>
                Search Radius (Miles):
                <select class="search_radius" name="search_radius">
                    {{#each btsUpdate}}
                    <option value="{{search_radius}}" disabled selected>{{search_radius}}</option>
                    {{/each}}
                    <option value="1">1</option>
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                    <option value="25">25</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                    <option value="150">150</option>
                    <option value="200">200</option>
                </select>
                <br>
                <h3>I'm Looking To:</h3>
                Buy:
                <select class="" name="buy">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
                <br>
                Trading:
                <select class="" name="trading">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
                <br>
                Trading For:
                <select class="" name="trading_for">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
                <br>
                Sell:
                <select class="" name="sell">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
                <br>
                <br>
                {{#each btsUpdate}}
                <input id="bts_id_hidden" type="hidden" name="id" value="{{id}}">
                {{/each}}
                <input type="submit" name="" value="Submit">
            </fieldset>
        </form>
    </div>
