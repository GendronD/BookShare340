<div class="container">
    <div class="jumbotron">
        {{#each bookUpdate}}
        <legend><b>Update Book: {{title}}</b></legend>
        {{/each}}
        <form class="" action="/updateBook/update" method="post">
            {{#each bookUpdate}}
            <div class="form-group">
                <label for="">Title:</label>
                <input type="text" name="title" value="{{title}}">
                <input id="book_id_hidden" type="hidden" name="book_id" value="{{book_id}}">
            </div>
            {{/each}}
            <div class="form-group">
                <label for="">Author:</label>
                <select name="author">
                    {{#each authors}}
                    <option value="{{author_id}}">{{fname}} {{lname}}</option>
                    {{/each}}
                </select>
            </div>
            <label> Genre </label>
            <select name="genre">
                {{#each genres}}
                <option value="{{id}}">{{genre_name}}</option>
                {{/each}}
            </select>
            <br>
            <input type="submit" value="Submit">
        </form>
    </div>
</div>




