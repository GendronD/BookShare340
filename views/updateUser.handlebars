<div class="container">
    <div class="jumbotron">
        {{#each usersUpdate}}
        <legend><b>Update User: {{fname}} {{lname}}</b></legend>
        {{/each}}
        <form class="" action="/updateUser/update" method="post">
            {{#each usersUpdate}}
            <div class="form-group">
                <label for="">First Name:</label>
                <input type="text" name="fname" value="{{fname}}">
            </div>
            <div class="form-group">
                <label for="">Last Name:</label>
                <input type="text" name="lname" value="{{lname}}">
            </div>
            <div class="form-group">
                <label for="">Location:</label>
                <input type="text" name="location" value="{{location}}">
            </div>
            <div>
                <a href="https://www.latlong.net/">Find Your Latitude and Longitude Here!</a>
            </div>
            <br>
            <div class="form-group">
                <label for="">Lat:</label>
                <input type="text" name="lat" value="{{lat}}">
            </div>
            <div class="form-group">
                <label for="">Long:</label>
                <input type="text" name="lon" value="{{lon}}">
            </div>
            <input id="user_id_hidden" type="hidden" name="user_id" value="{{user_id}}">
            {{/each}}
            <input type="submit" value="Submit">
        </form>
    </div>
</div>


